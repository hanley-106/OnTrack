<div id="menu">
    <h1>CSE Grader Assignment System</h1><small>by OnTrack</small>
    <% if current_user %>
      <h2><%= current_user.category %> Menu</h2>
    <% else %>
      <h2>Menu</h2>
    <% end %>
    <div id="buttons">
      <% if current_user %>
        <% if current_user.category == "Student" %>
          <%= button_to 'Applications', student_application_index_path%>
        <% elsif current_user.category == "Teacher" %>
          <%= button_to 'Recommendations', recommendations_show_path%>
          <%= button_to 'Evaluations', evaluations_index_path%>
        <% else %>
          <%= button_to 'Adminstrator Panel', admin_panel_index_path%>
        <% end %>
      <% else %>
        <%= button_to 'Applications', student_application_index_path%>
        <%= button_to 'Recommendations', recommendations_show_path%>
        <%= button_to 'Evaluations', evaluations_index_path%>
      <% end %>

      <%= button_to 'Configuration', configuration_index_path%>

    </div>
</div>
