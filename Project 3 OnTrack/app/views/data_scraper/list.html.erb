<!-- View that displays the results of the web scraping in a table -->

<h1>OnTrack Project 3: Web Scraping</h1>
<!-- Print time that data was gathered -->
<h4>Last updated: <%= Time.new.inspect %></h4>
<!-- Table to display course information -->
<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Class #</th>
      <th>Component</th>
      <th>Time</th>
      <th>Location</th>
      <th>Instructor</th>
      <th>Session</th>
    </tr>
  </thead>

  <tbody>
    <!-- Print each row in scraped table to displayed table -->
    <% @course.each do |c| %>
      <tr>
        <td><%= @names.find(c.class_name_id).name %></td> <!-- Course (ex: CSE 3901) -->
        <td><%= c.class_number %></td> <!-- Class number (ex: 6845) -->
        <td><%= c.component %></td> <!-- Component -->
        <td><%= c.times %></td> <!-- Times (ex: 0800A) -->
        <td><%= c.location %></td> <!-- Locations (ex: DL0357) -->
        <td><%= c.instructor %></td> <!-- Instructor (ex: P.Bucci) -->
        <td><%= c.session %></td> <!-- Session -->
      </tr>
    <% end %>
  </tbody>
</table>
<br>
